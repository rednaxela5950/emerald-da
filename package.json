{
  "name": "emerald-symbiotic-relay",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test:contracts": "forge test --root contracts",
    "build:worker": "npm run build --workspace=emerald-da-worker",
    "start:worker": "npm run start --workspace=emerald-da-worker",
    "build:data-service": "npm run build --workspace=dummy-data-service",
    "start:data-service": "npm run start --workspace=dummy-data-service",
    "dev:frontend": "npm run dev --workspace=emerald-da-frontend",
    "build:frontend": "npm run build --workspace=emerald-da-frontend",
    "test:integration": "npm run build:data-service && npm run build:worker && node --test integration/*.test.mjs",
    "deploy:local-chain": "node scripts/deploy-local-chain.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3"
  }
}
